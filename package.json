{
  "name": "shadcn-nextjs-page-generator",
  "version": "1.0.0",
  "description": "CLI tool to generate Next.js pages with shadcn/ui, Tailwind v4, and Framer Motion",
  "author": "Jatmiko",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "nextjs",
    "shadcn",
    "shadcn-ui",
    "tailwind",
    "tailwindcss",
    "framer-motion",
    "cli",
    "generator",
    "code-generator",
    "ddd",
    "typescript",
    "react"
  ],
  "bin": {
    "shadcn-page-gen": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.5",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "framer-motion": ">=11.0.0",
    "next": ">=16.0.0",
    "react": ">=19.0.0",
    "tailwindcss": ">=4.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    }
  }
}
